<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navigation"
    app:startDestination="@id/homeFragment">
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.apptimphongtro.ui.HomeFragment"
        android:label="Trang chủ"
        tools:layout="@layout/fragment_home"/>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.apptimphongtro.ui.SearchFragment"
        android:label="Tìm kiếm"
        tools:layout="@layout/fragment_search">
        <action android:id="@+id/action_fragmentSearch_to_BottomSearchWardFragment"
            app:destination="@+id/bottomSearchWard"/>
    </fragment>

    <fragment
        android:id="@+id/bottomSearchWard"
        android:name="com.example.apptimphongtro.ui.BottomSearchWardFragment"
        android:label="Tìm kiếm phường xã"
        tools:layout="@layout/fragment_bottom_search_ward">

        <argument android:name="city"
            app:argType="string"/>
    </fragment>

    <fragment
        android:id="@+id/favotiteFragment"
        android:name="com.example.apptimphongtro.ui.FavoriteFragment"
        android:label="Yêu thích"
        tools:layout="@layout/fragment_favorite"/>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.apptimphongtro.ui.ProfileFragment"
        tools:layout="@layout/fragment_profile"
        android:label="Cá nhân"/>

</navigation>