<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navigation"
    app:startDestination="@id/homeFragment">
    <action android:id="@+id/action_global_to_CofirmMapFragment"
        app:destination="@id/CofirmMapFragment" />

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.apptimphongtro.ui.HomeFragment"
        android:label="Trang chủ"
        tools:layout="@layout/fragment_home"/>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.apptimphongtro.ui.SearchFragment"
        android:label="Tìm kiếm"
        tools:layout="@layout/fragment_search">
        <action
            android:id="@+id/action_seachFragment_to_resultSearchFragment"
            app:destination="@+id/resultSearchFragment"
            app:enterAnim="@anim/slide_in_bottom"
            app:popExitAnim="@anim/slide_out_bottom"/>
    </fragment>
    <fragment
        android:id="@+id/addPostFrgament"
        android:name="com.example.apptimphongtro.ui.AddPostFragment"
        android:label="Đăng tin"
        tools:layout="@layout/fragment_add_post">
        <action
            android:id="@+id/action_addPost_to_implementAddPostFragment"
            app:destination="@id/ImplementAddPostFragment"
            app:enterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"/>
    </fragment>


    <fragment
        android:id="@+id/favotiteFragment"
        android:name="com.example.apptimphongtro.ui.FavoriteFragment"
        android:label="Yêu thích"
        tools:layout="@layout/fragment_favorite"/>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.apptimphongtro.ui.ProfileFragment"
        tools:layout="@layout/fragment_profile"
        android:label="Cá nhân">
        <action
            android:id="@+id/action_profileFragment_to_LoginFragment"
            app:destination="@+id/LoginFragment"/>
    </fragment>
    <fragment
        android:id="@+id/resultSearchFragment"
        android:name="com.example.apptimphongtro.ui.ResultSearchFragment"
        tools:layout="@layout/fragment_result_search"
        android:label="Kết quả tìm kiếm"/>
    <fragment
        android:id="@+id/LoginFragment"
        android:name="com.example.apptimphongtro.ui.LoginFragment"
        tools:layout="@layout/fragment_login"
        android:label="Màn hình login"/>
    <fragment
        android:id="@+id/CofirmMapFragment"
        android:name="com.example.apptimphongtro.ui.ConfirmMapFragment"
        tools:layout="@layout/fragment_confirm_map"
        android:label="Man hinh xac nhan dia chi">
        <argument android:name="LAT"
            app:argType="string"/>
        <argument android:name="LNG"
            app:argType="string"/>
        <argument android:name="ADDRESS"
            app:argType="string"/>
    </fragment>
    <fragment
        android:id="@+id/Step2AddressFragment"
        android:name="com.example.apptimphongtro.ui.Step2AddressFragment"
        tools:layout="@layout/fragment_step2_address"
        android:label="man hinh nhap dia chi cho phong tro">
        <action android:id="@+id/action_Step2AddressFragment_to_CofirmMapFragment"
                app:destination="@+id/CofirmMapFragment">
        </action>
    </fragment>

    <fragment
        android:id="@+id/ImplementAddPostFragment"
        android:name="com.example.apptimphongtro.ui.ImplementAddPostFragment"
       tools:layout="@layout/fragment_implement_add_post"
        android:label="trang gioi thieu dang tin">
        <action
            android:id="@+id/action_addPost_to_step2Address"
            app:destination="@id/Step2AddressFragment" />
    </fragment>
</navigation>