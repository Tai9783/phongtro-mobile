<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navigation"
    app:startDestination="@id/homeFragment">
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.apptimphongtro.ui.HomeFragment"
        android:label="Trang chủ"
        tools:layout="@layout/fragment_home"/>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.apptimphongtro.ui.SearchFragment"
        android:label="Tìm kiếm"
        tools:layout="@layout/fragment_search">
        <action
            android:id="@+id/action_seachFragment_to_resultSearchFragment"
            app:destination="@+id/resultSearchFragment"
            app:enterAnim="@anim/slide_in_bottom"
            app:popExitAnim="@anim/slide_out_bottom"/>
    </fragment>


    <fragment
        android:id="@+id/favotiteFragment"
        android:name="com.example.apptimphongtro.ui.FavoriteFragment"
        android:label="Yêu thích"
        tools:layout="@layout/fragment_favorite"/>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.apptimphongtro.ui.ProfileFragment"
        tools:layout="@layout/fragment_profile"
        android:label="Cá nhân"/>
    <fragment
        android:id="@+id/resultSearchFragment"
        android:name="com.example.apptimphongtro.ui.ResultSearchFragment"
        tools:layout="@layout/fragment_result_search"
        android:label="Kết quả tìm kiếm"/>

</navigation>