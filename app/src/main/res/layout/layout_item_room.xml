<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bo4goc_nen"
    android:backgroundTint="@color/white"
    android:padding="10dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imgRoom"
        android:layout_width="140dp"
        android:layout_height="140dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/decriptionImage"
        app:shapeAppearanceOverlay="@style/bo4goc"
        android:src="@drawable/anhphongtro"
        android:scaleType="centerCrop"
        />
    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/imgRoom"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="5dp"
        android:text="@string/itemPhongTro_title"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginTop="5dp"
        />
    <TextView
        android:id="@+id/txtPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/imgRoom"
        app:layout_constraintTop_toBottomOf="@+id/txtTitle"
        android:textSize="16sp"
        android:layout_marginStart="5dp"
        android:text="@string/itemPhongTro_Price"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:textColor="#074EFF"/>

        <ImageView
            android:id="@+id/iconAdress"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:contentDescription="@string/decriptionImage"
            android:src="@drawable/addresss"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            app:layout_constraintStart_toEndOf="@+id/imgRoom"
            app:layout_constraintTop_toBottomOf="@+id/txtPrice" />
            <TextView
                android:id="@+id/txtWard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/itemPhongTro_ward"
                android:layout_marginTop="10dp"
                android:textSize="15sp"
                android:layout_marginStart="5dp"
                app:layout_constraintStart_toEndOf="@+id/iconAdress"
                app:layout_constraintTop_toBottomOf="@+id/txtPrice"
                />
            <TextView
                android:id="@+id/txtCity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/menu_local_hcm"
                android:layout_marginTop="10dp"
                android:textSize="15sp"
                android:layout_marginStart="3dp"
                app:layout_constraintStart_toEndOf="@+id/txtWard"
                app:layout_constraintTop_toBottomOf="@+id/txtPrice"
                />
    <ImageView
        android:id="@+id/imgYeuThich"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="15dp"
        android:contentDescription="@string/decriptionImage"
        android:src="@drawable/favorite"
        app:tint="#A4A4A4" />
    <TextView
        android:id="@+id/txtArea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/itemPhongTro_Area"
        android:layout_marginTop="15dp"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/txtCity"
        android:layout_marginEnd="15dp"
        />
    <!-- ChipGroup - DYNAMIC, sẽ add chips từ code -->
    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chipGroup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:chipSpacing="4dp"
        app:chipSpacingHorizontal="4dp"
        app:singleLine="true"
        app:layout_constraintStart_toEndOf="@+id/imgRoom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iconAdress">


    </com.google.android.material.chip.ChipGroup>

</androidx.constraintlayout.widget.ConstraintLayout>