<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLoggedIn"
    android:background="@drawable/bo4goc_nenxam"
    android:backgroundTint="#FFFFFF"
    android:elevation="10dp">

    <TextView
        android:id="@+id/bgAvatar"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="20dp"
        android:background="@drawable/bg_avatar"
        android:elevation="5dp"
        android:gravity="center"
        android:text="@string/loginframent_txtTenUser"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtNameUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp"
        android:text="@string/loginframent_txtFullNameUser"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/bgAvatar"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtPhoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:text="@string/loginframent_txtPhoneNumber"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/bgAvatar"
        app:layout_constraintTop_toBottomOf="@+id/txtNameUser" />

    <TextView
        android:id="@+id/txtRole"
        android:layout_width="85dp"
        android:layout_height="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/bo4goc_nenxam"
        android:backgroundTint="#F0F5FF"
        android:gravity="center"
        android:text="@string/loginframent_txtFullRoleName"
        android:textColor="#4169E1"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/bgAvatar"
        app:layout_constraintTop_toBottomOf="@+id/txtPhoneNumber"
        android:layout_marginBottom="20dp"
        android:visibility="gone"/>

    <androidx.cardview.widget.CardView
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="5dp"
        app:cardBackgroundColor="#F0F5FF"
        android:layout_margin="20dp"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/decriptionImage"
            android:src="@drawable/icon_edit"
            app:tint="#4169E1"
            android:padding="3dp"/>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>