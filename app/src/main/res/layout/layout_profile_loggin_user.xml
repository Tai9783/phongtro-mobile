<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bo4goc_nenxam"
    android:backgroundTint="#FFFFFF"
    android:elevation="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ctTaiKhoan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bo4goc_nenxam"
        android:backgroundTint="#FFFFFF"
        android:elevation="10dp"
        android:paddingBottom="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ctHotro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/cvImgHoTro"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="15dp"
                app:cardBackgroundColor="#F6F6F6"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:contentDescription="@string/decriptionImage"
                    android:src="@drawable/iconperson"
                    app:tint="#1D5FFB" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/txtInforUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="@string/layout_profile_login_user_txtInforUser"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/cvImgHoTro"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtUpdateUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="3dp"
                android:text="@string/layout_profile_login_user_txtUpdateInfor"
                android:textColor="#7C7C7C"
                android:textSize="13sp"
                app:layout_constraintStart_toEndOf="@+id/cvImgHoTro"
                app:layout_constraintTop_toBottomOf="@+id/txtInforUser" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="@string/decriptionImage"
                android:src="@drawable/icontruycap"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="15dp"
            android:background="#E0E0E0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ctHotro" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ctLienHe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view1">

            <androidx.cardview.widget.CardView
                android:id="@+id/cvImgLienHe"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="15dp"
                app:cardBackgroundColor="#F6F6F6"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:contentDescription="@string/decriptionImage"
                    android:padding="3dp"
                    android:src="@drawable/icon_notication"
                    app:tint="#EFAE05" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/txtNotication"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="@string/layout_profile_login_user_txtNotication"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/cvImgLienHe"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtSettingNotication"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="3dp"
                android:text="@string/layout_profile_login_user_txtSettingNotication"
                android:textColor="#7C7C7C"
                android:textSize="13sp"
                app:layout_constraintStart_toEndOf="@+id/cvImgLienHe"
                app:layout_constraintTop_toBottomOf="@+id/txtNotication" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="@string/decriptionImage"
                android:src="@drawable/icontruycap"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="15dp"
            android:background="#E0E0E0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ctLienHe" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view2">

            <androidx.cardview.widget.CardView
                android:id="@+id/cvImgDieuKhoan"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="15dp"
                app:cardBackgroundColor="#F6F6F6"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:contentDescription="@string/decriptionImage"
                    android:padding="3dp"
                    android:src="@drawable/icon_lock"
                    app:tint="#BF4406" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/txtSecurity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="@string/layout_profile_login_user_txtSecurity"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/cvImgDieuKhoan"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtChangPass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="3dp"
                android:text="@string/layout_profile_login_user_txtChangePassword"
                android:textColor="#7C7C7C"
                android:textSize="13sp"
                app:layout_constraintStart_toEndOf="@+id/cvImgDieuKhoan"
                app:layout_constraintTop_toBottomOf="@+id/txtSecurity" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="@string/decriptionImage"
                android:src="@drawable/icontruycap"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutDangtin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/bo4goc_nenxam"
        android:backgroundTint="#E2874B"
        android:elevation="10dp"
        android:padding="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ctTaiKhoan">

        <androidx.cardview.widget.CardView
            android:id="@+id/cvHouse"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="15dp"
            app:cardBackgroundColor="#40FFFFFF"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:contentDescription="@string/decriptionImage"
                android:padding="3dp"
                android:src="@drawable/iconhouse"
                app:tint="#FFFFFF" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/txtTitleDangTin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:text="@string/layout_profile_login_user_txtTilteDangTin"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/cvHouse"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtContentDangTin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:text="@string/layout_profile_login_user_txtContentDangTin"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/cvHouse"
            app:layout_constraintTop_toBottomOf="@+id/txtTitleDangTin" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="140dp"
            android:layout_height="48dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/bo4goc_nenxam"
            android:backgroundTint="#FFFFFF"
            android:text="@string/layout_profile_login_user_txtDangTin"
            android:textAllCaps="false"
            android:textColor="#CA4B01"
            app:layout_constraintStart_toEndOf="@+id/cvHouse"
            app:layout_constraintTop_toBottomOf="@+id/txtContentDangTin" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>