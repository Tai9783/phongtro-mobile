        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="15dp"
        android:paddingEnd="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="@string/search_diadiem"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtCity"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="15dp"
            android:focusable="true"
            android:text="@string/search_CityName"
            android:background="@drawable/bo4goc_vienden"
            android:gravity="center|start"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:clickable="true"
            android:textSize="16sp"
            app:drawableEndCompat="@drawable/arrow_drop_down" />
        <TextView
            android:id="@+id/txtWard"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="15dp"
            android:focusable="true"
            android:text="@string/search_Ward"
            android:background="@drawable/bo4goc_vienden"
            android:gravity="center|start"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:textSize="16sp"
            app:drawableEndCompat="@drawable/arrow_drop_down"
            android:clickable="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="@string/search_titlePrice"
            android:textSize="18sp"
            android:textStyle="bold" />

