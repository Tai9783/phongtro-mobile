<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.ResultSearchFragment"
    android:background="@color/white">
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#074EFF"
        android:padding="15dp">

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/resultSearch_tiltle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="@color/white"
            />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtTitle"
            android:layout_marginTop="15dp"
            android:background="@drawable/bo4goc_nen"
            android:backgroundTint="#376DF5"
            android:padding="15dp">
            <ImageView
                android:id="@+id/imgAddress"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:contentDescription="@string/decriptionImage"
                android:src="@drawable/addresss"
                app:tint="@color/white"/>
            <TextView
                android:id="@+id/txtNameCity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/imgAddress"
                app:layout_constraintTop_toTopOf="parent"
                android:text="@string/resultSearch_NameCity"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginStart="5dp"/>
            <TextView
                android:id="@+id/lienket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/txtNameCity"
                app:layout_constraintTop_toTopOf="parent"
                android:text="@string/resultSearch_lienket"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginStart="5dp"/>
            <TextView
                android:id="@+id/txtNameWard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/lienket"
                app:layout_constraintTop_toTopOf="parent"
                android:text="@string/layoutItemSearch_Ward"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginStart="5dp"/>
            <TextView
                android:id="@+id/txtPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imgAddress"
                android:text="@string/resultSearch_Price"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_marginStart="29dp"
                android:layout_marginTop="5dp"/>
            <TextView
                android:id="@+id/lienket2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/txtPrice"
                app:layout_constraintTop_toBottomOf="@+id/imgAddress"
                android:text="@string/resultSearch_lienket"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"/>
            <TextView
                android:id="@+id/txtAmenity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/lienket2"
                app:layout_constraintTop_toBottomOf="@+id/imgAddress"
                android:text="@string/resultSearch_Amenity"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <HorizontalScrollView
        android:id="@+id/layout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout1"
        android:background="#FFFFFF"
        android:fillViewport="true"
        android:scrollbars="none"
        android:padding="5dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">


        <com.google.android.material.chip.ChipGroup
            android:id="@+id/ChipGroupFilter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:singleLine="true"
            app:chipSpacingHorizontal="20dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            >
            <com.google.android.material.chip.Chip
                android:id="@+id/chipFilter"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/resultSearch_textFilter"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                app:chipIcon="@drawable/icon_fillter"
                app:chipIconTint="#FFFFFF"
                app:chipIconVisible="true"
                app:chipIconSize="16dp"
                app:chipBackgroundColor="#074EFF"
                app:chipStartPadding="8dp"
                app:chipEndPadding="8dp"
                app:iconStartPadding="4dp"/>
            <com.google.android.material.chip.Chip
                android:id="@+id/chipSortPrice"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/resultSearch_SortPrice"
                android:textStyle="bold"
                app:closeIcon="@drawable/arrow_drop_down"
                app:chipStrokeColor="#D5D5D5"
                app:chipStrokeWidth="1dp"
                app:closeIconVisible="true"
                app:closeIconSize="16dp"
               app:chipBackgroundColor="@color/white"
                app:closeIconStartPadding="8dp"
                app:closeIconEndPadding="8dp"
                app:iconStartPadding="4dp"
               />
            <com.google.android.material.chip.Chip
                android:id="@+id/chipSortDistance"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/resultSearch_SortDistance"
                android:textStyle="bold"
                app:closeIcon="@drawable/arrow_drop_down"
                app:chipStrokeColor="#D5D5D5"
                app:chipStrokeWidth="1dp"
                app:chipBackgroundColor="@color/white"
                />
        </com.google.android.material.chip.ChipGroup>
        </LinearLayout>
    </HorizontalScrollView>
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout3"
        android:background="#E9E9E9"/>
    <TextView
        android:id="@+id/txtTiltleResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view"
        android:layout_marginStart="15dp"
        android:text="@string/resultSearch_textQuantityRoom"
        android:layout_marginTop="15dp"/>
    <TextView
        android:id="@+id/txtResultQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/txtTiltleResult"
        app:layout_constraintTop_toBottomOf="@+id/view"
        android:layout_marginStart="4dp"
        android:text="@string/resultSearch_txtResultQuantity"
        android:layout_marginTop="15dp"
        android:textStyle="bold"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtResultQuantity"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="15dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>