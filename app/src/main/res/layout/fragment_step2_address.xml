<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.Step2AddressFragment"
    android:background="@drawable/bo4goc_nenxam"
    android:backgroundTint="#FFFFFF"
    android:padding="20dp"
    android:elevation="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutNotication"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="15dp"
        android:background="@drawable/bo4goc_nenxam"
        android:backgroundTint="#F8F1EE">

        <ImageView
            android:id="@+id/imgAddress"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="@string/decriptionImage"
            android:src="@drawable/addresss"
            app:tint="#F27303"/>
        <TextView
            android:id="@+id/txtNotication"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/imgAddress"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@string/step2Infor_txtNotication"
            android:layout_marginStart="5dp"
            android:textColor="#F27303"
            android:textSize="17sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/txtContentNotication"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/imgAddress"
            app:layout_constraintTop_toBottomOf="@+id/txtNotication"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/step2Infor_txtContentNotication"
            android:layout_marginStart="5dp"
            android:textColor="#F27303"
            android:textSize="16sp"
            android:layout_marginTop="7dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:id="@+id/txtTilteProvince"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutNotication"
        android:text="@string/step2Address_txtTilteProvince"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_marginTop="15dp"/>
    <TextView
        android:id="@+id/txtProvince"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTilteProvince"
        android:text="@string/step2Address_txtProvince"
        android:textSize="18sp"
        android:background="@drawable/bo4goc_nenxam"
        android:paddingStart="15dp"
        android:paddingEnd="5dp"
        android:backgroundTint="#F4F4F4"
        android:layout_marginTop="10dp"
        android:gravity="center|start"
        app:drawableEndCompat="@drawable/arrow_drop_down"
        />
    <TextView
    android:id="@+id/txtTilteWard"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/txtProvince"
    android:text="@string/step2Address_txtTilteWard"
    android:textStyle="bold"
    android:textSize="18sp"
    android:textColor="#000000"
    android:layout_marginTop="15dp"/>
    <TextView
        android:id="@+id/txtWard"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTilteWard"
        android:text="@string/step2Address_txtWard"
        android:textSize="18sp"
        android:background="@drawable/bo4goc_nenxam"
        android:paddingStart="15dp"
        android:paddingEnd="5dp"
        android:backgroundTint="#F4F4F4"
        android:layout_marginTop="10dp"
        android:gravity="center|start"
        app:drawableEndCompat="@drawable/arrow_drop_down"

        />
    <TextView
        android:id="@+id/txtTilteAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtWard"
        android:text="@string/step2Address_txtTilteAddress"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_marginTop="15dp"/>
    <EditText
        android:id="@+id/edtAddress"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:autofillHints=""
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTilteAddress"
        android:hint="@string/step2Address_txtAddress"
        android:textSize="18sp"
        android:background="@drawable/bo4goc_nenxam"
        android:paddingStart="15dp"
        android:paddingEnd="5dp"
        android:backgroundTint="#F4F4F4"
        android:layout_marginTop="10dp"
        android:gravity="center|start"
        android:inputType="text"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtAddress"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        >
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnQuaylai"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bo4goc_viennen_xam"
            android:text="@string/step1Infor_btnTiepTuc"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_marginEnd="10dp"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnContinue"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/button_xanh"
            android:text="@string/step1Infor_btnTiepTuc"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_weight="1"
            />

    </LinearLayout>





</androidx.constraintlayout.widget.ConstraintLayout>