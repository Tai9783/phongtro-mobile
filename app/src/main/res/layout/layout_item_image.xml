<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="140dp"
    android:layout_height="130dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginEnd="12dp">
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imgRoom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/anhphongtro"
        android:scaleType="centerCrop"
       app:shapeAppearanceOverlay="@style/RoundImage"
       />
    <ImageView
        android:id="@+id/icClose"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="15dp"
        android:src="@drawable/close"
        app:tint="@color/white"
        android:background="@drawable/bg_icon_close"
        android:padding="5dp"
        android:contentDescription="@string/decriptionImage"
        />
        <TextView
            android:id="@+id/txtAnhBia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="@string/txt_item_image"
            android:textColor="#FFFFFF"
            android:background="@drawable/bg_txt_anhbia"
            android:padding="3dp"
            android:layout_margin="5dp"
           />

</androidx.constraintlayout.widget.ConstraintLayout>