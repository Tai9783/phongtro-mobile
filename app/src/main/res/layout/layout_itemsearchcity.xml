<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="15dp"
    android:background="@drawable/item_city_selected">

    <FrameLayout
        android:id="@+id/cvImgAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:contentDescription="@string/decriptionImage"
        android:background="@drawable/bogocimg"
      >
        <ImageView
            android:id="@+id/imgLocation"
            android:layout_width="43dp"
            android:layout_height="44dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:contentDescription="@string/decriptionImage"
            android:src="@drawable/addresss"
            android:padding="7dp"
            />

    </FrameLayout>
    <TextView
        android:id="@+id/txtCityName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/cvImgAddress"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/search_CityName"
        android:layout_marginStart="10dp"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/text_city_color"
        />
    <TextView
        android:id="@+id/txtCountRoom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/cvImgAddress"
        app:layout_constraintTop_toBottomOf="@+id/txtCityName"
        android:text="@string/searchChoiceItem_CountRoom"
        android:layout_marginStart="10dp"
        android:layout_marginTop="3dp"
        android:textSize="17sp"
        android:textColor="@color/text_city_color"/>



</androidx.constraintlayout.widget.ConstraintLayout>